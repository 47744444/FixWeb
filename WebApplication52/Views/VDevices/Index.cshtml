            <td>
                @Html.DisplayFor(modelItem => item.備註)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.日期)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
