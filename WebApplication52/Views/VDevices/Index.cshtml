            <td>
                @Html.DisplayFor(modelItem => item.報修原因)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.報修人員工號)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.維修人員工號)
